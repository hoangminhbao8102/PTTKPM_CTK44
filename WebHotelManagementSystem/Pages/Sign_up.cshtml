@page
@model WebHotelManagementSystem.Pages.Sign_upModel
@{
}

<br />
<h2>Đăng ký khách sạn</h2>

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Họ và tên chủ khách sạn</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Giới tính</label>
        <div class="col-sm-6">
            <input type="radio" name="male" value="" />
            <label class="col-sm-3 col-form-label">Nam</label>
            <input type="radio" name="female" value="" />
            <label class="col-sm-3 col-form-label">Nữ</label>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Số CCCD</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="IDnumber" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Địa chỉ</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="address" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Số điện thoại</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="phone" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Username</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="username" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Password</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="username" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Đăng nhập</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Đăng ký</a>
        </div>
    </div>
</form>